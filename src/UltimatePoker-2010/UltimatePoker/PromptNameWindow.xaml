<Window x:Class="UltimatePoker.PromptNameWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="ToolWindow"
    Title="Name Exists" Height="150" Width="300"
        WindowStartupLocation="CenterOwner"
    >
  <StackPanel>
    <Label x:Name="promptLabel" >Name already exists</Label>
    <StackPanel Orientation="Horizontal">
      <Label Margin="5">Enter New Name</Label>
      <TextBox x:Name="UserName" MinWidth="100" TabIndex="1"/>
    </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5">
            <Button IsDefault="True" Click="OnOk" Width="80" Margin="5,0,5,0">Ok</Button>
            <Button IsCancel="True" Width="80" Margin="5,0,5,0">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
